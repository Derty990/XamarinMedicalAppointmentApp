<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalAppointmentApp.Views.MenuPage"
             Title="Menu"
             BackgroundColor="#f5f5f5">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20">
            <!-- Nagłówek menu -->
            <Frame BackgroundColor="#3498db" Padding="20" CornerRadius="10">
                <StackLayout>
                    <Label Text="Medical App" 
                           TextColor="White" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    <Label Text="System rezerwacji wizyt" 
                           TextColor="White" 
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Przyciski menu -->
            <Button Text="Dashboard" 
                    BackgroundColor="White" 
                    TextColor="#3498db" 
                    CornerRadius="10"
                    Clicked="OnDashboardClicked" />

            <Button Text="Lekarze" 
                    BackgroundColor="White" 
                    TextColor="#3498db" 
                    CornerRadius="10"
                    Clicked="OnDoctorsClicked" />

            <Button Text="Umów wizytę" 
                    BackgroundColor="White" 
                    TextColor="#3498db" 
                    CornerRadius="10"
                    Clicked="OnAppointmentBookingClicked" />

            <Button Text="Moje wizyty" 
                    BackgroundColor="White" 
                    TextColor="#3498db" 
                    CornerRadius="10"
                    Clicked="OnMyAppointmentsClicked" />

            <Button Text="Profil" 
                    BackgroundColor="White" 
                    TextColor="#3498db" 
                    CornerRadius="10"
                    Clicked="OnProfileClicked" />

            <Button Text="Wyloguj" 
                    BackgroundColor="#e74c3c" 
                    TextColor="White" 
                    CornerRadius="10"
                    Clicked="OnLogoutClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>