<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalAppointmentApp.Views.DashboardPage"
             Title="Dashboard">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Frame BackgroundColor="#3498db" CornerRadius="10" HasShadow="True" Padding="15">
                <StackLayout Orientation="Horizontal">
                    <Image Source="user.png" HeightRequest="50" WidthRequest="50" />
                    <StackLayout VerticalOptions="Center" Margin="15,0,0,0">
                        <Label Text="Witaj, Jan" TextColor="White" FontSize="18" FontAttributes="Bold" />
                        <Label Text="Ostatnia wizyta: 15.03.2025" TextColor="White" FontSize="14" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Grid Padding="0" ColumnSpacing="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Lekarze -->
                    <StackLayout Grid.Row="0" Grid.Column="0" Padding="20" BackgroundColor="White">
                        <Image Source="doctor.png" HeightRequest="50" HorizontalOptions="Center" />
                        <Label Text="Znajdź lekarza" HorizontalOptions="Center" FontSize="16" Margin="0,10,0,0" TextColor="Red" />
                        <Button Text="Przejdź" 
                                x:Name="FindDoctorButton"
                                BackgroundColor="#3498db" 
                                TextColor="White" 
                                CornerRadius="20"
                                HeightRequest="40"
                                Margin="0,10,0,0"
                                Clicked="OnFindDoctorClicked" />
                    </StackLayout>

                    <!-- Rezerwacja wizyt -->
                    <StackLayout Grid.Row="0" Grid.Column="1" Padding="20" BackgroundColor="White">
                        <Image Source="calendar.png" HeightRequest="50" HorizontalOptions="Center" />
                        <Label Text="Umów wizytę" HorizontalOptions="Center" FontSize="16" Margin="0,10,0,0" TextColor="Red" />
                        <Button Text="Przejdź" 
                                x:Name="BookAppointmentButton"
                                BackgroundColor="#3498db" 
                                TextColor="White" 
                                CornerRadius="20"
                                HeightRequest="40"
                                Margin="0,10,0,0"
                                Clicked="OnBookAppointmentClicked" />
                    </StackLayout>

                    <!-- Moje wizyty -->
                    <StackLayout Grid.Row="1" Grid.Column="0" Padding="20" BackgroundColor="White">
                        <Image Source="appointment.png" HeightRequest="50" HorizontalOptions="Center" />
                        <Label Text="Moje wizyty" HorizontalOptions="Center" FontSize="16" Margin="0,10,0,0" TextColor="Red" />
                        <Button Text="Przejdź" 
                                x:Name="MyAppointmentsButton"
                                BackgroundColor="#3498db" 
                                TextColor="White" 
                                CornerRadius="20"
                                HeightRequest="40"
                                Margin="0,10,0,0"
                                Clicked="OnMyAppointmentsClicked" />
                    </StackLayout>

                    <!-- Profil -->
                    <StackLayout Grid.Row="1" Grid.Column="1" Padding="20" BackgroundColor="White">
                        <Image Source="profile.png" HeightRequest="50" HorizontalOptions="Center" />
                        <Label Text="Mój profil" HorizontalOptions="Center" FontSize="16" Margin="0,10,0,0" TextColor="Red" />
                        <Button Text="Przejdź" 
                                x:Name="ProfileButton"
                                BackgroundColor="#3498db" 
                                TextColor="White" 
                                CornerRadius="20"
                                HeightRequest="40"
                                Margin="0,10,0,0"
                                Clicked="OnProfileClicked" />
                    </StackLayout>
                </Grid>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="15">
                <StackLayout>
                    <Label Text="Nadchodzące wizyty" FontSize="18" FontAttributes="Bold" TextColor="#2c3e50" />

                    <Frame BorderColor="#f0f0f0" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                        <StackLayout>
                            <Label Text="Dr Anna Kowalska" FontAttributes="Bold" />
                            <Label Text="Kardiolog" TextColor="#95a5a6" />
                            <Label Text="Data: 25.04.2025, 10:00" />
                            <Label Text="Klinika Zdrowia, ul. Medyczna 15" />
                        </StackLayout>
                    </Frame>

                    <Frame BorderColor="#f0f0f0" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                        <StackLayout>
                            <Label Text="Dr Jan Nowak" FontAttributes="Bold" />
                            <Label Text="Okulista" TextColor="#95a5a6" />
                            <Label Text="Data: 10.05.2025, 14:30" />
                            <Label Text="Centrum Medyczne, ul. Szpitalna 5" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>