<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalAppointmentApp.MainPage"
             BackgroundColor="#f5f5f5"
             Title="Medical Appointment System">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Image Source="logo.png" HeightRequest="120" HorizontalOptions="Center" />

        <Label Text="Medical Appointment System" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="#2c3e50"
               FontAttributes="Bold"
               Margin="0,0,0,20" />

        <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="20">
            <StackLayout Spacing="15">
                <Label Text="Logowanie" 
                       FontSize="18" 
                       TextColor="#2c3e50" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Entry Placeholder="Email" 
                       x:Name="EmailEntry"
                       Keyboard="Email" />

                <Entry Placeholder="Hasło" 
                       x:Name="PasswordEntry"
                       IsPassword="True" />

                <Button Text="Zaloguj się" 
                        BackgroundColor="#3498db" 
                        TextColor="White" 
                        CornerRadius="5"
                        Clicked="OnLoginClicked"
                        Margin="0,10,0,0" />

                <Label Text="Nie masz konta? Zarejestruj się" 
                       TextColor="#3498db" 
                       HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>